{
  "title": "User",
  "description": "A user of the data portal who can submit and access data.",
  "$id": "/profiles/user.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["email", "first_name", "last_name"],
  "additionalProperties": false,
  "mixinProperties": [
    {
      "$ref": "mixins.json#/basic_item"
    }
  ],
  "properties": {
    "email": {
      "title": "Email",
      "type": "string",
      "description": "The email associated with the user's account.",
      "format": "email",
      "uniqueKey": true,
      "pattern": "^[^A-Z\\s@]+@[^A-Z\\s@]+\\.[^A-Z\\s@]+$"
    },
    "first_name": {
      "title": "First Name",
      "description": "The user's first (given) name.",
      "type": "string"
    },
    "last_name": {
      "title": "Last Name",
      "description": "The user's last (family) name.",
      "type": "string"
    }
  }
}
