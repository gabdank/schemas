{
  "title": "Library",
  "$id": "/profiles/library.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Abstract schema for libraries prepared from biological samples.",
  "type": "object",
  "required": ["lab", "samples"],
  "additionalProperties": false,
  "mixinProperties": [
    {
      "$ref": "mixins.json#/basic_item"
    }
  ],
  "properties": {
    "lab": {
      "title": "Lab",
      "description": "Lab associated with the submission.",
      "comment": "Required. See lab.json for list of available identifiers.",
      "type": "string",
      "linkTo": "Lab",
      "linkSubmitsFor": true
    },
    "samples": {
      "title": "Samples",
      "description": "Biological sample(s) used to prepare this library.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "title": "Sample",
        "description": "Biological sample.",
        "comment": "See Biosample.json for available identifiers.",
        "type": "string",
        "linkTo": "Biosample"
      }
    },
    "multiplexing_method": {
      "title": "Multiplexing Method",
      "description": "Method used for sample multiplexing in this library.",
      "type": "string",
      "enum": ["cell hashing", "lipid hashing", "genetic", "sample barcodes"]
    }
  },
  "dependentSchemas": {
    "multiplexing_method": {
      "properties": {
        "samples": {
          "minItems": 2
        }
      }
    }
  }
}